{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="Bla bla bla concernant l'upload.">
  <meta name="keywords" content="soccer,football ">
{% endblock %}


{% block title %}
  Admin Section- Modify video - {{ parent() }} 
{% endblock %}

{% block content %}

  {# src/BF/SiteBundle/Resources/views/Video/form.html.twig #}
  <section class="header">
    <div class="row" style="margin-top:50px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
        <div class="row">
          <h3>Add a new Challenge</h3>
            <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

              {# Les erreurs générales du formulaire. #}
              {{ form_errors(form) }}

              <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.challenge, "Challenge :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.challenge) }}

                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                  {# Génération de l'input. #}
                  {{ form_widget(form.challenge, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.title, "Title :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.title) }}

                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                  {# Génération de l'input. #}
                  {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.description, "Description :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.description) }}

                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                  {# Génération de l'input. #}
                  {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.repetitions, "Repetitions :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.repetitions) }}

                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                  {# Génération de l'input. #}
                  {{ form_widget(form.repetitions, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>

              <input type="submit" value="Modify" class="btn btn-success" />
             
            {{ form_rest(form) }}
            {{ form_end(form) }}
          </div>

        </div>
      </div>
    </div>
  </section>




  
{% endblock %}
