{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="Bla bla bla concernant l'upload.">
  <meta name="keywords" content="soccer,football ">
{% endblock %}


{% block title %}
  Admin Section- List of all the videos - {{ parent() }} 
{% endblock %}

{% block content %}


<section class="header">
	<div class="row" style="margin-top:50px;">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
			<div class="row">
				<h3>All the users</h3>

				<div class="well">
					<table class="table">
						<tr>
							<th>Title</th>
							<th>Challenge</th>
							<th>User</th>
							<th>Score</th>
							<th>Repetitions</th>
						</tr>

				 	{% for video in listVideos %}
						<tr>
							<td>{{ video.title }}</td>
							<td>{{ video.challenge.titleEN }}</td>
							<td><a href="{{ path('bf_site_admin_user_view', {'id': video.user.id} ) }}">{{ video.user.username }}</a></td>
							<td>{{ video.score }}</td>
							<td>{{ video.repetitions }}</td>
							<td>
								<a href="{{ path('bf_site_video', { 'code': video.code }) }}" target="_blank" class="btn btn-success">
									View
								</a>
								<a href="{{ path('bf_site_admin_video_mod', {'id': video.id} ) }}" class="btn btn-primary">
									Modify
								</a>
							
				   				<a href="{{ path('bf_site_admin_video_del', {'id': video.id} ) }}" class="btn btn-danger">
									Delete
								</a>
							</td>
						</tr>
					{% endfor %}
				</table>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
