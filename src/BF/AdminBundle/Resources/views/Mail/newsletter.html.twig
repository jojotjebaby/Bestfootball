{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="Bla bla bla concernant l'upload.">
  <meta name="keywords" content="soccer,football ">
{% endblock %}


{% block title %}
  Admin Section- add a new challenge - {{ parent() }} 
{% endblock %}

{% block content %}
<section class="header">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row">
        	<div class="well">
        		<h1>Envoyer un newsletter</h1>
        		
        		<section id="form">
        			<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 vcenter">
                <div class="row">
                  <!--The form -->
                  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                  {# Les erreurs générales du formulaire. #}
                  {{ form_errors(form) }}

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.subject, "Sujet :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.subject) }}

                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                      {# Génération de l'input. #}
                      {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.message, "Messsage :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.message) }}

                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                      {# Génération de l'input. #}
                      {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.challenge, "Challenge :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.challenge) }}

                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                      {# Génération de l'input. #}
                      {{ form_widget(form.challenge, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.challengeMessage, "Challenge :", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.challengeMessage) }}

                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                      {# Génération de l'input. #}
                      {{ form_widget(form.challengeMessage, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                 
                  {{ form_rest(form) }}
                  {{ form_end(form) }}
        			
        		</section>
			</div>
        </div>
      </div>
    </div>
</section>

  

{% endblock %}
