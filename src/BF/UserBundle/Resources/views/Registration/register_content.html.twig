{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="form-group">
      {{ form_errors(form.email) }}
    	<label for="fos_user_registration_form_email" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">Email</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		 {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    	</div>
   	</div>
   	<div class="form-group">
      {{ form_errors(form.username) }}
    	<label for="fos_user_registration_form_username" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">Username</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    	</div>
   	</div>
   	<div class="form-group">
      {{ form_errors(form.plainPassword.first) }}
    	<label for="fos_user_registration_form_plainPassword_first" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">Password</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
    		
    	</div>
   	</div>
   	<div class="form-group">
      {{ form_errors(form.plainPassword.second) }}
    	<label for="fos_user_registration_form_plainPassword_second" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">Repeat Password</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
    	</div>
   	</div>

   	{{ form_rest(form) }}
   </br>
</br>
    <div>
        <input type="submit" class="btn btn-success" style="margin-top: 10px;" value="{{ 'registration.submit'|trans }}" />
    </div>

{{ form_end(form) }}