{% extends "BFUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
    	<label for="username" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">{{ 'security.login.username'|trans }}</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
    	</div>
   	</div>
   </br>
   	<div class="form-group">
    	<label for="password" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">{{ 'security.login.password'|trans }}</label>
    	<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
    		<input type="password" id="password" name="_password" required="required" class="form-control"/>
    	</div>
   	</div>




    
    

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
</br>
    <input type="submit" id="_submit" name="_submit" class="btn btn-success" value="{{ 'security.login.submit'|trans }}" />
</form>
{% endblock fos_user_content %}



