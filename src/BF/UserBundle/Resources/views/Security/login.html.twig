{% extends "BFSiteBundle::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<section class="header text-center">
  <div class="row" style="margin-top:50px;">
    <div class="col-xs-10 col-sm-6 col-md-4 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-md-offset-4 col-lg-offset-4" >
      <div style="background-color:rgba(255,255,255,0.8);">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active" style="width:50%;"><a href="#connect" aria-controls="connect" role="tab" data-toggle="tab">Connect</a></li>
          <li role="presentation"  style="width:50%;"><a href="{{ path('fos_user_registration_register') }}">Subscribe</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content row" style="padding-bottom:10px;">
          <div role="tabpanel" class="tab-pane active" id="connect">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" >


              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook', 'scope' : 'email' }) }}">
                  <img src="/img/fblogin.png" alt="fb login button" style="width:60%;margin-top:20px;"/>
                </a>
              </div>
              </br>
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">
                  <img src="/img/googlelogin.png" alt="google login button" style="width:60%;margin-top:20px;"/>
                </a>
              </div>

              
              {% if error %}
                  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}

              <form action="{{ path('fos_user_security_check') }}" method="post">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                  <div class="form-group" style="margin-top:20px;">
                   
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" required="required" class="form-control" style="margin-top:20px;"/>
                    </div>
                  </div>
                 </br>
                  <div class="form-group" style="margin-top:20px;">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="password" id="password" name="_password" required="required" placeholder="Password" class="form-control" style="margin-top:20px;"/>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                  <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                  </div>
                  
             
                  <input type="submit" id="_submit" name="_submit" class="btn btn-success" value="{{ 'security.login.submit'|trans }}" />
              </form>
                <a href="{{ path('fos_user_resetting_request') }}">Forgot your password?</a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
