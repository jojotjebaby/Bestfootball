{% extends "BFSiteBundle::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<section class="header text-center">
  <div class="row" style="margin-top:50px;">
    <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3" >
      <h1 style="color:white;">Connect to Bestfootball.fr</h1>
      <div style="background-color:rgba(255,255,255,0.8)">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active" style="width:50%;"><a href="#connect" aria-controls="connect" role="tab" data-toggle="tab">Connect</a></li>
          <li role="presentation"  style="width:50%;"><a href="{{ path('fos_user_registration_register') }}">Subscribe</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content row" style="padding-bottom:10px;">
          <div role="tabpanel" class="tab-pane active" id="connect">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1" >
              {% if error %}
                  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}

              <form action="{{ path('fos_user_security_check') }}" method="post">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                  <div class="form-group">
                    <label for="username" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">{{ 'security.login.username'|trans }}</label>
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
                      <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                    </div>
                  </div>
                 </br>
                  <div class="form-group">
                    <label for="password" class="col-xs-12 col-sm-5 col-md-5 col-lg-5 control-label">{{ 'security.login.password'|trans }}</label>
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
                      <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>
                  </div>
                  <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                  <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </br>
                  <input type="submit" id="_submit" name="_submit" class="btn btn-success" value="{{ 'security.login.submit'|trans }}" />
              </form>
            </div>
          </div>
          
        </div>

      </div>
    </div>
  </div>
</section>
{% endblock %}


