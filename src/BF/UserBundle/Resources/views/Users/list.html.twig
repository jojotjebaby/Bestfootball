{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  User List - {{ parent() }}
{% endblock %}

{% block meta %}
  <style type="text/css">
 

  .ranking{
  	background-image:url(/img/ranking.jpg);
    /*rgba(149,205,54,0); */
    background-attachment: fixed;
    background-size: cover;    
    padding-top: 50px;
    min-height: 75vh;
  }
  .pagination>.active>a {
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.42857143;
    color: #FFF;
    text-decoration: none;
    background-color: #95cd36;
    border: 1px solid #ddd;
	}
	.pagination>.active>a:hover {
    background-color: #95cd36;
	}

    .pagination>li>a {
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.42857143;
    color: #FFF;
    text-decoration: none;
    background-color: #A4A4A4;
    border: 1px solid #ddd;
	}
	.pagination>li>a:hover {
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.42857143;
    color: #FFF;
    text-decoration: none;
    background-color: #95cd36;
    border: 1px solid #ddd;
	}
  </style>
{% endblock %}


{% block content %}
<section class="ranking">
  	<div class="row" style="min-height:65vh;margin-top:50px;">
    	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
      		<div class="row">
        	<!--Begin of the User list -->

        		
        		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" >
        			<div class="row">
		
	        			<!-- buttons to navigate between the different pages -->
			        		<div class="row">
			        			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
			        				<div class="row">
			        					<ul class="pagination">
										  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
										  {% for p in range(1, nbPages) %}
										    <li{% if p == page %} class="active"{% endif %}>
										      <a href="{{ path('bf_user_list', {'page': p}) }}">{{ p }}</a>
										    </li>
										  {% endfor %}
										</ul>
			    					</div>
			    				</div>
			    			</div>

						    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:10px;">
								<div class="row">						    
						    		<table class="table">
								        {% set i = 1 %}
										{% for user in listUsers %}
											{# here we make the little thumbnails for every video #}
										<tr style="height:50px;">
									        <td>{{ i }}</td>
									        <td style="height:50px;"><a href="{{ path('bf_site_profile', { 'username': user.username }) }}"><img src="{{ user.media.path }}" alt="{{ user.media.name }}" style="height:101%;border-radius:50%"/></a></td>
									        <td><a href="{{ path('bf_site_profile', { 'username': user.username }) }}">{{ user.username }}</td></a>
									        <td>{{ user.points }}</td>
									    </tr>
												
										{% set i= i+1 %}
									{% endfor %} 
								    </table>
								</div>
							</div>




					
					</div>
				</div>
			


			<!-- END of the ranking page -->
        	</div>
      	</div>
    </div>
</section>
{% endblock %}
