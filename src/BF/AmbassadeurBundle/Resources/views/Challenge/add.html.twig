{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="">
  <meta name="keywords" content="">
{% endblock %}


{% block title %}
  Ambassadeur Section- add a new challenge - {{ parent() }} 
{% endblock %}

{% block body %}

<section class="header">
    <div class="row" style="margin-top:20px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
        <div class="row">
          <h3>Create a new Challenge</h3>


            
          <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 text-center">
            <div class="row">
              <div class="well">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                  {# Les erreurs générales du formulaire. #}
                  {{ form_errors(form) }}

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.title, "Title:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.title) }}

                    <div class="col-sm-9">
                      {# Génération de l'input. #}
                      {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.descriptionEN, "Description EN:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.descriptionEN) }}

                    <div class="col-sm-9">
                      {# Génération de l'input. #}
                      {{ form_widget(form.descriptionEN, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.descriptionFR, "Description FR:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.descriptionFR) }}

                    <div class="col-sm-9">
                      {# Génération de l'input. #}
                      {{ form_widget(form.descriptionFR, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(form.file, "File:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.file) }}

                    <div class="col-sm-9">
                      {# Génération de l'input. #}
                      {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>


                  {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}

                {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                

                {# Génération automatique des champs pas encore écrits.
                   Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                   et tous les champs cachés (type « hidden »). #}
                {{ form_rest(form) }}
                
                {# Fermeture de la balise <form> du formulaire HTML #}
                {{ form_end(form) }}

              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
</section>

{% endblock %}
