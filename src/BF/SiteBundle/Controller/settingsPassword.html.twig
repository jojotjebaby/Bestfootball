<div class="row">
  {# This is the content section of our page, here the user will be able to view all the challenges with the different niveau's! #}
  <form action="{{ path('bf_site_settings_reset_password')}}" method="post">
  	<div class="row">
	  	
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 vcenter">
			<div class="form-group">
			    {{ form_label(form.oldpassword, "Old Password:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.oldpassword) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.oldpassword, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		  	<div class="form-group">
			    {{ form_label(form.newpassword, "New Password:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.newpassword) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.newpassword, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
			    {{ form_label(form.newpasswordrepeat, "Repeat New Password:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.newpasswordrepeat) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.newpasswordrepeat, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
		</div>
		 {{ form_rest(form) }}
      <input type="submit" value="Modify" class="btn btn-success text-center" />
	</div>
  </form>
	  
</div>
