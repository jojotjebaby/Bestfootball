{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
	Freestyle section - {{ parent() }}
{% endblock %}
	

{% block content %}
<section class="homepage">
	<div class="row" style="margin-top:50px;">
     	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        	<div class="row">
        		<!-- Begin of the challenge view page -->
        		<h1 style="color:#000000;" class="text-center">{{ 'Freestyle videos'|trans }}</h1>
        		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7 vcenter">
        			<div class="row">
        				<div style="width:100%;max-height:400px;background-color:black;margin-bottom:20px;">
							<video width="100%" id="video" controls style="max-width:100%;max-height:400px;">
							    <source src="/uploads/videos/{{ video.id}}.mp4" type="video/mp4">
							    	Your browser does not support the video tag.
							</video>
						</div>
        			</div>
	      		</div><!--
	    		--><div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 vcenter"> <!-- Challenge explication + participate button -->
	       			<div class="challengedescription">
	       				<!--Title with line -->
					      <div style="width: 100%; height: 21px; border-bottom: 1px solid #95cd36; text-align: center;background-color:#FFF;">
					        <span style="font-size: 27px; background-color: #FFF; padding: 0 10px;color:#95cd36;">
					          {{ 'How does it work?'|trans }} <!--Padding is optional-->
					        </span>
					      </div>
					      <div style="width: 100%; height: 15px;background-color:#FFF;">
					      </div>


	            		
		            	<div class="challengecontent">
		              		<p style="text-align: justify;text-justify: inter-word;">
		               			{{ 'This is the Freestyle section of bestfootball. Be free and upload your freestyle video by clicking on the button below!'|trans }} 
		              		</p>
		              		
					      
		              		<button onclick="location.href='{{ path('bf_site_upload', { 'id': '0', 'type': 'freestyle' }) }}'" class="btn btn-participate" type="submit">{{ 'Upload my video'|trans }}</button>
		            	</div>
	          		</div>
	      		</div>

	      		<!--Begin of the latest videos -->
	      		{% for video in listVideos %}
	      			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:20px;">
	      				<div class="row">
	      					{% include "BFSiteBundle:Video:Thumbsquare.html.twig" with {"video": video} only %}
	      				</div>
	      			</div>
	      		{% endfor %}


	      		


        	</div>
        </div>
    </div>
</section>
{% endblock %}
