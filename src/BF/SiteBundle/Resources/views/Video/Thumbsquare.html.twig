	<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center vcenter" style="padding:5px 5px;">
		<div class="row">
			<a href="{{ path('bf_site_video', { 'id': video.id }) }}">
	        	<img src="/uploads/videos/thumbnail/{{ video.id }}.jpg" alt="{{ video.thumbAlt }}"  style="max-width:90%;max-height:120px;"/>

	        	{% if video.type == 'freestyle' %}
                  <p style="font-size:20px;">{{ video.title }}</p>
                {% else %}
                  <p style="font-size:20px;">{{ video.challenge.title }}</p>
                {% endif %}
                </a>


                {% if video.repetitions > video.challenge.six %}
		            <h5>{{'Legend'|trans }}</h5> <p>{{ video.repetitions }}X</p>
		        {% elseif video.repetitions == video.challenge.six %}
		          	<h5>{{'Expert'|trans }}</h5><p>{{ video.repetitions }}X</p>
		        {% else %}
		          	<h5>Points : {{ video.score }}</h5><p>{{ video.repetitions }}X</p>
		        {% endif %}


	        	<p><a href="{{ path('bf_site_profile', { 'username': video.user.username }) }}">{{ video.user.username }}</a></p>
    	</div>
    </div>
