	<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center" style="padding:5px 5px;">
		<div class="row">
			<a href="{{ path('bf_site_video', { 'id': video.id }) }}">
				{% if video.type == 'freestyle' %}
                  <p style="font-size:20px;">{{ video.title }}</p>
                {% else %}
                  <p style="font-size:20px;">{{ video.challenge.title }}</p>
                {% endif %}
	        		<img src="/uploads/videos/thumbnail/{{ video.id }}.jpg" alt="{{ video.thumbAlt }}"  style="max-width:90%;max-height:120px;"/>
                </a>
                <p><a href="{{ path('bf_site_profile', { 'username': video.user.username }) }}">{{ video.user.username }}</a></p>

                {% if video.type == 'challenge' %}
                	<p>{{ video.repetitions }}X</p>
                {% endif %}
        	
    	</div>
    </div>
