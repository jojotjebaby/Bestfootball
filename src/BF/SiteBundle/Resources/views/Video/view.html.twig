{% extends "BFSiteBundle::base.html.twig" %}

{% block meta %}
	<meta name="description" content="{{ video.description }}">
	<meta name="keywords" content="soccer,football, {{ video.title }}, ">
{% endblock %}

{% block title %}
  Videos - {{ parent() }}
{% endblock %}

{% block body %}
  <div class="row">
  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
  	<div class="col-xs-10 col-sm-9 col-md-9 col-lg-9">
  		<video width="100%" controls autoplay>
		  <source src="/Bestfootball/web/uploads/videos/{{video.id}}.{{ video.source }}" type="video/webm">
		Your browser does not support the video tag.
		</video>
		 <h2>{{ video.title }}</h2><p style="font-size:14px;">{{ video.user.username }} {{ video.date|date('d-m-Y')}}</p>
		{{ video.description }}
  </br>
    
    Challenge : {{ video.challenge.title }}

  	</div>
  	<div class="col-xs-10 col-sm-3 col-md-3 col-lg-3">

  	</div>
</div>


  	
  <hr>

  {# On définit un nouveau bloc, que les vues du bundle pourront remplir #}

{% endblock %}