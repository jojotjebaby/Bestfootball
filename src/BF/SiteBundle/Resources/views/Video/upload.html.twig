{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="Bla bla bla concernant l'upload.">
  <meta name="keywords" content="soccer,football ">
{% endblock %}


{% block title %}
  Upload your video - {{ parent() }} 
{% endblock %}

{% block content %}

  
<section class="profile">
  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
      <div class="challengedescription text-center" style="margin:150px 0;">
        <div class="challengetitle">
          <h3 style="color:white;">Upload your video.</h3>
        </div>
        <div class="challengecontent">
          {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          {# Les erreurs générales du formulaire. #}
          {{ form_errors(form) }}
          <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.title, "Title:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.title) }}
            <div class="col-sm-4">
              {# Génération de l'input. #}
              {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>

          {# Idem pour un autre champ. #}
          <div class="form-group">
            {{ form_label(form.description, "Description:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.description) }}
            <div class="col-sm-4">
              {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>

          <div class="form-group">
            {{ form_label(form.repetitions, "Repetitions:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.repetitions) }}
            <div class="col-sm-4">
              {{ form_widget(form.repetitions, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>

          <div class="form-group">
            {{ form_label(form.file, "File:", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.file) }}
            <div class="col-sm-4">
              {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <input type="submit" value="Upload" class="btn btn-warning" />
        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_rest(form) }}
        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}