<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 vcenter" style="margin: 25px 0px;">
  <div class="row">


    {% if duel.winner.id == duel.host.id %}
          
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 vcenter text-center">
          <div class="row">
            <!--the Host section -->

              <img src="/img/winner.gif" alt="winner gif"></br>
              <img src="{{ duel.host.picture.src }}" alt="{{ duel.host.picture.src }}" style="width:50%;border-radius:50%;">
            
              <h2 style="color:#95cd36;" class="text-center">{{ duel.host.username }}</h2>
              <video width="100%" id="video" controls style="max-width:100%;max-height:400px;">
                <source src="/uploads/videos/{{ videohost.source }}" type="video/mp4">
                  Your browser does not support the video tag.
            </video>


          </div>
        </div><!--
      --><div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 vcenter text-center">
          <div class="row">
            <!--The VS sign -->
            <img src="/img/vs.png" alt="the vs image" style="width:100%;">
          </div>
        </div><!--
    --><div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 vcenter text-center">
          <div class="row">
          <!--The Guest section -->
           
            <img src="{{ duel.guest.picture.src }}" alt="{{ duel.guest.picture.src }}" style="width:50%;border-radius:50%;margin-top:170px;">
            <h2 style="color:#95cd36;" class="text-center">{{ duel.guest.username }}</h2>

            <video width="100%" id="video" controls style="max-width:100%;max-height:400px;">
                <source src="/uploads/videos/{{ videoguest.source }}" type="video/mp4">
                  Your browser does not support the video tag.
            </video>

          </div>
        </div>


    {% elseif duel.winner.id == duel.guest.id %}
