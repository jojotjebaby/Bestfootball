{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
	<meta name="description" content="Bla bla bla concernant le profil.">
	<meta name="keywords" content="soccer,football, ">
{% endblock %}


{% block title %}
  Duel - {{ duel.host.username }} against {{ duel.guest.username }} {{ parent() }} 
{% endblock %}

{% block content %}
<section class="homepage">
    <div class="row" style="margin-top:50px;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        <div class="row">
          {# begin of the duel page #}
          <h1 style="color:#95cd36;" class="text-center">Duel  - {{ duel.challenge.title }}</h1>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 vcenter row">
            {% if duel.completed == 0 %} {# The duel is not completed yet #}
              {% include "BFSiteBundle:Duel:duelincomplete.html.twig" with {"duel": duel} only %}
            {% elseif duel.completed == 1 %}
              {% include "BFSiteBundle:Duel:duelcomplete.html.twig" with {"duel": duel, 'videohost': videohost, 'videoguest': videoguest} only %}
           {% endif %}
          </div>
          {# end of the duel page #}
        </div>
      </div>
    </div>
</section>
{% endblock %}
