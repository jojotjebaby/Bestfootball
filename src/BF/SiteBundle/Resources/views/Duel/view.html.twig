{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
	<meta name="description" content="Bla bla bla concernant le profil.">
	<meta name="keywords" content="soccer,football, ">
{% endblock %}


{% block title %}
  Duel - {{ duel.users.0.username }} against {{ duel.users.0.username }} {{ parent() }} 
{% endblock %}

{% block content %}
<section class="background">
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 vcenter row">
                <div class="challengedescription">
                  <div class="challengetitle">
                    <h3 class="text-center" style="color:white;">Duel {{ duel.challenge.title }}: {{ duel.users.0.username }} against {{ duel.users.1.username }}</h3>
                  </div>
                  <div class="challengecontent">
                    {% if duel.completed == 0 %} {# The duel is not completed yet #}
                      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                          <p>End of the duel : {{ duel.endDate|date('d-m-Y G:i')}}</p>
                      </div>
                      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 vcenter">
                          <video width="100%" id="video" controls>
                            <source src="/uploads/challenges/{{ duel.challenge.id}}.{{ duel.challenge.videoUrl }}" type="video/mp4">
                          Your browser does not support the video tag.
                          </video>
                      </div><!--
                    --><div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 vcenter">
                          <p>{{ duel.challenge.description }}</p>
                      </div>
                    {% else %} {# The duel is completed #}
                    <div class="text-center">
                      <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 vcenter">
                          <video width="100%" id="video" controls>
                            <source src="/uploads/videos/{{ duel.videos.0.id}}.{{ duel.videos.0.source }}" type="video/mp4">
                          Your browser does not support the video tag.
                          </video>
                      </div><!--
                    --><div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 vcenter">
                          <p>vs</p>
                      </div><!--
                   --><div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 vcenter">
                          <video width="100%" id="video" controls>
                            <source src="/uploads/videos/{{ duel.videos.1.id}}.{{ duel.videos.1.source }}" type="video/mp4">
                          Your browser does not support the video tag.
                          </video>
                      </div>
                    </div>
                    {% endif %}
                  </div>
                </div>
              </div>
          </div>
        </div>
      </section>
{% endblock %}


{% block javascripts %}
{% endblock %}