{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  Challenge - {{ challenge.title }} - {{ parent() }}
{% endblock %}
	

{% block content %}
<section class="background text-center">
	<div class="row">
	  <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
	    <h1 style="color:white;">{{challenge.title}}</h1>
	      <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7 vcenter">
	        <video width="100%" controls>
	          <source src="/uploads/challenges/{{ challenge.id }}.mp4" type="video/mp4">
	        Your browser does not support the video tag.
	        </video>
	      </div><!--
	    --><div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 vcenter"> <!-- Challenge explication + participate button -->
	        <div class="challengedescription">
	            <div class="challengetitle">
	              <h3 style="color:white;">Challenge</h3>
	            </div>
	            <div class="challengecontent">
	              <p style="text-align: justify;text-justify: inter-word;">
	               {{ challenge.description }}
	              </p>
	              <a href="{{ path('bf_site_upload', { 'id': challenge.id, 'type': 'challenge' }) }}" class="btn btn-warning" role="button">Participate !</a>
	            </div>
	          </div>
	      </div>
	  </div>
	</div>
	<div class="row" style="margin-top:30px;">
	  <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
	    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-5 vcenter"> 
	      <div class="videotabback">
	        <div class="challengetitle">
	          <h3 style="color:white;">Last videos </h3>
	        </div>
	        <div class="challengecontent">
	        	{% for video in listVideos %}
			  			<div class="videotab row">
				            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter">
				              <a href="{{ path('bf_site_video', { 'id': video.id }) }}"><img src="img/profile.png" alt="" style="height:50px;"/></a>
				            </div><!--
				         --><div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 vcenter">
				              <p style="font-size:14px;">{{ video.title }},</br> {{ video.date|date('d-m-Y')}} by <a href="{{ path('bf_site_profile', { 'username': video.user.username }) }}" style="color:white;"> {{ video.user.username }} </a></p>
				            </div>
				        </div>		
			  	{% endfor %}
	        </div>
	      </div>
	    </div><!--
	--><div class="col-xs-12 col-sm-12 col-md-5 col-lg-7 vcenter row">
	    <div class="challengedescription">
	        <div class="challengetitle">
	          <h3 style="color:white;">Ranking</h3>
	        </div>
	        <div class="challengecontent">
	          <table class="table table-striped">
	          	{% set i = 1 %}
					{% for user in rankUsers %}
					{# here we make the little thumbnails for every video #}
						<tr style="height:50px;">
					        <td>{{ i }}</td>
			                <td style="height:50px;"><img src="/uploads/img/{{ user.user.picture.src }}" alt="{{ user.user.picture.alt }}" style="height:101%;border-radius:50%"/></td>
			                <td>{{ user.user.username }}</td>
			                <td>{{ user.points }}</td>
					    </tr>
						{% set i= i+1 %}
					{% endfor %}
	          </table>
	        </div>
	      </div>
	  </div>
	</div>
	</div>
	</br>
	</br>
	</section>
{% endblock %}