{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  Connect - {{ parent() }}
{% endblock %}


{% block content %}
	<section class="header text-center">
        <div class="row" style="margin-top:50px;">
          <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3" >
            <h1 style="color:white;">Connect to Bestfootball.com</h1>
            <div style="background-color:rgba(255,255,255,0.8)">

			  <!-- Nav tabs -->
			  <ul class="nav nav-tabs" role="tablist">
			    <li role="presentation" class="active" style="width:50%;"><a href="#connect" aria-controls="connect" role="tab" data-toggle="tab">Connect</a></li>
			    <li role="presentation" style="width:50%;"><a href="#subscribe" aria-controls="subscribe" role="tab" data-toggle="tab">Subscribe</a></li>
			  </ul>

			  <!-- Tab panes -->
			  <div class="tab-content row" style="padding-bottom:10px;">
			    <div role="tabpanel" class="tab-pane active" id="connect">
			    	<div class="col-xs-10 col-sm-8 col-md-6 col-lg-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3 col-lg-offset-3" >
						{{ render(controller("FOSUserBundle:Security:login")) }}
					</div>
			    </div>
			    <div role="tabpanel" class="tab-pane" id="subscribe">
			    	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
					    <div class="form-group" id="fos_user_registration_form">
					        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
					        {{ form_errors(form.email) }}

					        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
					        {{ form_errors(form.username) }}

					        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
					        {{ form_errors(form.plainPassword.first) }}

					        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
					        {{ form_errors(form.plainPassword.second) }}

					        {{ form_rest(form) }}

					    </div>
					    <div>
					        <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'registration.submit'|trans }}">
					    </div>
					</form>
			    </div>
			  </div>
			</div>
          </div>
        </div>
      </section>
{% endblock %}