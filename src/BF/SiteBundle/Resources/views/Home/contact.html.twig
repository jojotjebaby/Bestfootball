{% extends "BFSiteBundle::base.html.twig" %}


{% block meta %}
  <meta name="description" content="La page de contact de Bestfootball">
  <meta name="keywords" content="soccer,football,bestfootball, football challenges, challenges, foot challenges, football tricks, freestyle foot, freestyle football, challenges foot, soccer tricks, freestyle soccer, football freestyle, cool soccer tricks, freestyle soccer ball, soccer freestyle, reseau sociau, internet social, football challenge, vinsky, défi technique">
{% endblock %}


{% block title %}
  {{ 'Contact us'|trans }} - {{ parent() }} 
{% endblock %}

{% block content %}
<section class="header text-center">
  <div class="row" style="margin-top:50px;">
    <div class="col-xs-10 col-sm-6 col-md-4 col-lg-4 col-xs-offset-1 col-sm-offset-3 col-md-offset-4 col-lg-offset-4" >
      <div class="challengedescription text-center" style="background-color:rgba(255,255,255,0.8);">
        <div class="challengetitle">
          <h3 style="color:white;">{{ 'Contact us'|trans }}</h3>
        </div>
        <div class="challengecontent text-center">
          {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          {# Les erreurs générales du formulaire. #}
          {{ form_errors(form) }}

          {# Idem pour un autre champ. #}
          <div class="form-group">
            {{ form_errors(form.name) }}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'Name'}}) }}
            </div>
          </div>

          <div class="form-group">
            {{ form_errors(form.email) }}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email'}}) }}
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {{ form_widget(form.reason, {'attr': {'class': 'form-control','placeholder':'Reason'}}) }}
            </div>
          </div>

          <div class="form-group">
            {{ form_errors(form.message) }}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              {{ form_widget(form.message, {'attr': {'class': 'form-control','placeholder':'Type your message'}}) }}
            </div>
          </div>
          
          <div class="form-group">
            {{ form_label(form.copy,"Get a copy of this message",{'label_attr': {'class': 'col-xs-9 col-sm-6 col-md-6 col-lg-6 control-label'}}) }}
            <div class="col-xs-3 col-sm-6 col-md-6 col-lg-6">
              {{ form_widget(form.copy, {'attr': {'class': 'form-control','style': 'height:15px;'}}) }}
            </div>
          </div>
          </br>
          <input type="submit" value="Send the message" class="btn btn-success" />
          {{ form_rest(form) }}
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
