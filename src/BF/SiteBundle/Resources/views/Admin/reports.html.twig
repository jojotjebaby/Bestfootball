{% extends "BFSiteBundle::Adminbase.html.twig" %}


{% block meta %}
  <meta name="description" content="Bla bla bla concernant l'upload.">
  <meta name="keywords" content="soccer,football ">
{% endblock %}


{% block title %}
  Admin Section- challenges - {{ parent() }} 
{% endblock %}

{% block content %}

 
<h3>The reports on Bestfootball</h3>


	
 	{% for report in listReports %}
 		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 row well">
 			<h3>{{ report.user.username }} reported a video</h3>
        	<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row vcenter">
        		<video width="100%" controls autoplay>
				  <source src="/uploads/videos/{{ report.video.id}}.{{ report.video.source }}" type="video/mp4">
				Your browser does not support the video tag.
				</video>
        	</div><!--
         --><div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row vcenter">
        		<p>repetitions : {{ report.video.repetitions }} </br>score : {{ report.video.score }}</br>user : {{ report.video.user.username }}</p>
        	</div><!--
         --><div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row vcenter">
        		<p>reason : {{ report.reason }} </br>message : {{ report.message }}</p>
        	</div><!--
         --><div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 row vcenter">
        		<a href="{{ path('bf_site_admin_okvideo', {'id': report.id }) }}" class="btn btn-default">
			      <i class="glyphicon glyphicon-ok"></i>
			      Video OK!
			    </a>
	   			<a href="{{ path('bf_site_admin_delvideo', {'id': report.id }) }}" class="btn btn-danger">
			      <i class="glyphicon glyphicon-trash"></i>
			      Delete
			    </a>
        	</div>
		</div>


	{% endfor %}


{% endblock %}