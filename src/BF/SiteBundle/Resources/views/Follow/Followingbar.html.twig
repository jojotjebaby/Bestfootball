<div class="followtabback">

  <div style="width: 100%; height: 21px; border-bottom: 1px solid #95cd36; text-align: center;background-color:rgba(255,255,255,0.8);">
    <span style="font-size: 27px; background-color: rgba(255,255,255,0.8); padding: 0 10px;color:#95cd36;">
      Following <!--Padding is optional-->
    </span>
  </div>
  <div style="width: 100%; height: 15px;background-color:rgba(255,255,255,0.8);">
  </div>



  <div class="followcontent">
    {% for follow in listFollows %}
      <a href="{{ path('bf_site_profile', { 'username': follow.following.username }) }}">
        <div class="col-xs-4 hidden-sm col-md-2 col-lg-2 vcenter">
          <div class="row">
            <img src="{{ follow.following.media.path }}" alt="{{ follow.following.media.name }}" style="width:100%;border-radius:100%"/>
          </div>
        </div><!--
        --><div class="col-xs-6 col-sm-12 col-md-10 col-lg-10 vcenter">
          <div class="row">
            <p>{{ follow.following.username }}</p>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
