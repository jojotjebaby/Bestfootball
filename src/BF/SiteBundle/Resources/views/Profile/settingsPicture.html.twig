
<div class="row">
  {# This is the content section of our page, here the user will be able to view all the challenges with the different niveau's! #}
  	<div class="row">
	  	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 vcenter">
	  		{% if user.media != null %}
	  		<img src="{{ user.media.path }}" alt="{{ user.media.name }}" class="img-responsive"/>
	  		{% else %}
	  			{{'No profile picture'|trans }}
	  	{% endif %}
		</div><!--
	--><div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 vcenter">


			<div id="jcrop-holder">
                <!-- This is the image we're attaching Jcrop to -->
                {% if asset is defined %}
                    <img src="{{ asset }}" id="cropbox" />
                {% else %}
                    <img src="holder.js/300x300?bg=#b8ebb8&fg=#ffffff" id="cropbox">
                {% endif %}

            </div>
                     
            <!-- This is the form that our event handler fills -->
            <form name="upload" action="{{ path('media_crop') }}" {{ form_enctype(form) }} method="POST"  onsubmit="return checkCoords();">
                {{ form_widget(form._token) }}
                {{ form_widget(form.file, {'id':'file','data-route':'media_json_upload'})}}
                {{ form_widget(form.dimensions) }}
                {{ form_widget(form.submit) }}
                <button type="submit" id="_submit" disabled="disabled" name="_submit" class="btn btn-primary nl-button"><i class="fa fa-sign-in"></i> Upload</button>
            </form>

		</div>
	</div>	  
</div>
