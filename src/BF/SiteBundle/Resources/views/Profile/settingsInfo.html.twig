<div class="row">
  {# This is the content section of our page, here the user will be able to view all the challenges with the different niveau's! #}
  <form action="{{ path('bf_site_settings_info')}}" method="post">
  	<div class="row">
	  	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 vcenter">
		  	<div class="form-group">
			    {{ form_label(form.name, "Name:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.name) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
			    {{ form_label(form.firstname, "Firstname:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.firstname) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
			    {{ form_label(form.birthday, "Birthday:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
			    {{ form_errors(form.birthday) }}
			    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
			      {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
			    {{ form_label(form.country, "Country:", {'label_attr': {'class': 'col-xs-12 col-sm-4 col-md-4 col-lg-4 control-label'}}) }}
