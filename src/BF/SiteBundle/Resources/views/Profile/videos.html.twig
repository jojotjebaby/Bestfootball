{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  My videos - {{ parent() }}
{% endblock %}


{% block content %}
<section class="profile">
  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
  {# This is the content section of our page, here the user will be able to view all the challenges with the different niveau's! #}
 		<div class="challengedescription row" style="margin-botom:100px;">
        	<div class="challengetitle">
          		<h3 class="text-center" style="color:white;">My videos</h3>
        	</div>
        	<div class="challengecontent">
				  {% for video in listVideos %}
					<div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
					  	<div class="jumbotron text-center" style="background-color:rgba(255, 255, 255,0.8);padding:10px;">
					   		<h3>{{ video.title }}</h3>
					   		<p> Points : {{ video.score }}</p>
					   	
						   	<img src="/uploads/videos/thumbnail/{{ video.id }}.jpg" alt="{{ video.thumbAlt }}" class="img-responsive"/>
							</br>
							<a href="{{ path('bf_site_video_modify', {'id': video.id}) }}" class="btn btn-default">
								<i class="glyphicon glyphicon-edit"></i>
								    Modify your video
								</a>
						    <a href="{{ path('bf_site_video_delete', {'id': video.id}) }}" class="btn btn-danger">
								<i class="glyphicon glyphicon-trash"></i>
								    Delete this video.
								</a>
					    </div>
					</div>
				  {% endfor %}
			</div>
		</div>
	</div>
  </div>
</section>


{% endblock %}