<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="row">
    <div class="followtabback" style="min-height:250px;">

      <!--Title with line -->
      <div style="width: 100%; height: 21px; border-bottom: 1px solid #95cd36; text-align: center;background-color:rgba(255,255,255,1);">
        <span style="font-size: 27px; background-color: rgba(255,255,255,1); padding: 0 10px;color:#95cd36;">
          	{% if app.request.getLocale() == 'fr' %}			
	        	{{ challenge.titleFR }}
	      	{% else %}
	        	{{ challenge.titleEN }}
	        {% endif %} <!--Padding is optional-->
        </span>
      </div>
      <div style="width: 100%; height: 15px;background-color:rgba(255,255,255,1);">
      </div>


      <div class="followcontent">
        <div class="row">
          <!-- Begin of the banner -->
          <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 vcenter text-center">
  			<div class="row">
  				<!-- Picture -->
  				{% if challenge.partner == 1 %}
  					<a href="{{ path('bf_site_challengeview', {'slug': challenge.slug}) }}"><img src="{{ challenge.logoPartner }}" alt="Logo of {{ challenge.titleEN }}" style="max-width:90%;max-height:150px;" class="text-center"></a>
  				{% else %}
  					<a href="{{ path('bf_site_challengeview', {'slug': challenge.slug}) }}"><img src="/uploads/challenges/thumbnail/{{ challenge.id }}.jpg" alt="thumbnail of {{ challenge.titleEN }}" style="max-width:90%;max-height:150px;" class="text-center"></a>
  				{% endif %}
  			</div>
  		  </div><!--
  		  --><div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 vcenter">
  			<div class="row">
  				<!--Description -->
  				{% if app.request.getLocale() == 'fr' %}			
	        		{{ challenge.descriptionFR }}
		      	{% else %}
		        	{{ challenge.descriptionEN }}
		        {% endif %} 
  			</div>
  		  </div><!--
  		  --><div class="col-xs-12 col-sm-12 col-md-4 col-lg-3 vcenter text-center">
  			<div class="row">
  				<!--Prices-->
  				<!-- The First Price -->
    			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center">
    				<div class="row">

    					<img src="/img/challenges/first.png" alt="" style="width:40%;max-width:85px;" class="text-center"/>
	    				<!--The gift -->
	    				

						{% if challenge.firstPrizeLogo is null %}
							<p>
								{% if app.request.getLocale() == 'fr' %}			
			        				{{ challenge.firstPrizeTitleFR }}
			        			{% else %}
			        				{{ challenge.firstPrizeTitleEN }}
			        			{% endif %}
				        	</p>
						{% else %}
		    				<figure>
								<img src="{{ challenge.firstPrizeLogo }}" alt="first prize for the {{ challenge.nomPartner }} challenge on Bestfootball" style="max-width:90%;" class="text-center"/>
								<figcaption>
						  			{% if app.request.getLocale() == 'fr' %}			
				        				{{ challenge.firstPrizeTitleFR }}
				        			{% else %}
				        				{{ challenge.firstPrizeTitleEN }}
				        			{% endif %}
						  		</figcaption>
							</figure>
						{% endif %}


    				</div>
    			</div>
    			<!-- The second price -->
    			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center">
    				<div class="row">

    					<img src="/img/challenges/second.png" alt="" style="width:40%;max-width:85px;" class="text-center"/>

    				<!-- the gift -->
    					{% if challenge.secondPrizeLogo is null %}
    						<p>
    							{% if app.request.getLocale() == 'fr' %}			
			        				{{ challenge.secondPrizeTitleFR }}
			        			{% else %}
			        				{{ challenge.secondPrizeTitleEN }}
			        			{% endif %}
				        	</p>
    					{% else %}
    						<figure>
								<img src="{{ challenge.secondPrizeLogo }}" alt="first prize for the {{ challenge.nomPartner }} challenge on Bestfootball" style="max-width:90%;" class="text-center"/>
						  		<figcaption>
						  			{% if app.request.getLocale() == 'fr' %}			
				        				{{ challenge.secondPrizeTitleFR }}
				        			{% else %}
				        				{{ challenge.secondPrizeTitleEN }}
				        			{% endif %}
						  		</figcaption>
							</figure>
    					{% endif %}
    				</div>
    			</div>

    			<!-- The third Price -->
    			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 text-center" >
    				<div class="row">
    					<!--The number of the place -->
    						<img src="/img/challenges/third.png" alt="" style="width:40%;max-width:85px;" class="text-center"/>
    					<!--The gift-->
    					{% if challenge.thirdPrizeLogo is null %}
							<p>
								{% if app.request.getLocale() == 'fr' %}			
			        				{{ challenge.thirdPrizeTitleFR }}
			        			{% else %}
			        				{{ challenge.thirdPrizeTitleEN }}
			        			{% endif %}
				        	</p>
						{% else %}
		    				<figure>
								<img src="{{ challenge.thirdPrizeLogo }}" alt="third prize for the {{ challenge.nomPartner }} challenge on Bestfootball" style="max-width:90%;" class="text-center"/>
								<figcaption>
						  			{% if app.request.getLocale() == 'fr' %}			
				        				{{ challenge.thirdPrizeTitleFR }}
				        			{% else %}
				        				{{ challenge.thirdPrizeTitleEN }}
				        			{% endif %}
						  		</figcaption>
							</figure>
						{% endif %}
    				</div>
    			</div>

  				
  			</div>
  		  </div>
        </div>
      </div>

      <button onclick="location.href='{{ path('bf_site_challengeview', {'slug': challenge.slug}) }}'" class="btn btn-participate" type="submit">{{ 'Participate'|trans }}</button>
    </div>
  </div>
</div>
