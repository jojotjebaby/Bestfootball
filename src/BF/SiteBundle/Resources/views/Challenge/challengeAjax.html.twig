<div id="challenge" style="background-color:#F2F2F2;border-radius:15px;margin-bottom:15px;">
	<div class="row">
     	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        	<div class="row">
        		<!-- Begin of the challenge view page -->
        		<h1 style="color:#95cd36;" class="text-center">{{challenge.title}}</h1>
        		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 vcenter">
        			<div class="row">
        				<div style="width:100%;max-height:400px;background-color:black;margin-bottom:10px;">
							<video width="100%" id="video" controls style="max-width:100%;max-height:400px;">
							    <source src="/uploads/challenges/{{ challenge.id}}.mp4" type="video/mp4">
							    	Your browser does not support the video tag.
							</video>
						</div>
        			</div>
	      		</div><!--
	    		--><div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 vcenter"> <!-- Challenge explication + participate button -->
	       			<div class="challengedescription" style="min-height:10px;">
	            		<div class="challengetitle">
	              			<h3 style="color:white;" class="text-center">{{ 'The Duel'|trans }}</h3>
	            		</div>
		            	<div class="challengecontent" style="min-height:10px;background-color:#F2F2F2;margin: 0px 0px;">
		              		<p style="text-align: justify;text-justify: inter-word;">
		               			{% if app.request.getLocale() == 'fr' %}			
					            	{{ challenge.descriptionFR }}
					            {% elseif app.request.getLocale() == 'en' %}
					            	{{ challenge.descriptionEN }}
					            {% else %}
					            	{{ challenge.descriptionEN }}
					            {% endif %}
		              		</p>
		            	</div>
	          		</div>
	      		</div>
        	</div>
        </div>
    </div>
</div>
