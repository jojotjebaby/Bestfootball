{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  Challenge - {{ challenge.titleEN }} - {{ parent() }}
{% endblock %}
	

{% block content %}
<section class="homepage">
	<div class="row" style="margin-top:50px;">
     	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        	<div class="row">
        		<!-- Begin of the challenge view page -->
        		<h1 style="color:#000000;" class="text-center">
        			{% if app.request.getLocale() == 'fr' %}			
		            	{{ challenge.titleFR }}
		            {% elseif app.request.getLocale() == 'en' %}
		            	{{ challenge.titleEN }}
		            {% else %}
		            	{{ challenge.titleEN }}
		            {% endif %}
				</h1>
        		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-7 vcenter">
        			<div class="row">
        				<div style="width:100%;max-height:400px;background-color:black;margin-bottom:20px;">
							<video width="100%" id="video" controls style="max-width:100%;max-height:400px;">
							    <source src="/uploads/challenges/{{ challenge.id}}.mp4" type="video/mp4">
							    	Your browser does not support the video tag.
							</video>
						</div>
        			</div>
	      		</div><!--
	    		--><div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 vcenter"> <!-- Challenge explication + participate button -->
	       			<div class="challengedescription">
	       				<div style="width: 100%; height: 21px; border-bottom: 1px solid #95cd36; text-align: center;background-color:#FFF;">
							<span style="font-size: 27px; background-color: #FFF; padding: 0 10px;color:#95cd36;">
							  {{ 'The challenge'|trans }} <!--Padding is optional-->
							</span>
						</div>
						<div style="width: 100%; height: 15px;background-color:#FFF;">
						</div>

		            	<div class="challengecontent">
		              		<p style="text-align: justify;text-justify: inter-word;">
		              			{% if app.request.getLocale() == 'fr' %}			
		            				{{ challenge.descriptionFR }}
		            			{% elseif app.request.getLocale() == 'en' %}
		            				{{ challenge.descriptionEN }}
		            			{% else %}
		            				{{ challenge.descriptionEN }}
		            			{% endif %}
		              		</p></br>
		              		<div class="row" style="margin-bottom:70px;">
					          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					                <p>{{ challenge.one }}X</br>50 Points</p>
					              </div>
					            </div>
					          </div><!--
					       --><div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					               <p>{{ challenge.two }}X</br>100 Points</p>
					              </div>
					            </div>
					          </div><!--
					       --><div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					               <p>{{ challenge.three }}X</br>150 Points</p>
					              </div>
					            </div>
					          </div><!--
					       --><div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					               <p>{{ challenge.four }}X</br>200 Points</p>
					              </div>
					            </div>
					          </div><!--
					       --><div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					               <p>{{ challenge.five }}X</br>250 Points</p>
					              </div>
					            </div>
					          </div><!--
					       --><div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 vcenter text-center" style="padding:5px 5px;">
					            <div class="profilecounter text-center">
					              <div>
					               <p>{{ challenge.six }}X</br>300 Points</p>
					              </div>
					            </div>
					          </div>
					        </div>

		              		<button onclick="location.href='{{ path('bf_site_upload', { 'id': challenge.id, 'type': 'challenge' }) }}'" class="btn btn-participate" type="submit">{{ 'Upload my video'|trans }}</button>
		            	</div>
	          		</div>
	      		</div>

	      		<!--Begin of the latest videos -->
	      		<div class="col-xs-12 col-sm-12 col-md-7 col-lg-5">
	      			<div class="row">
	      				{% include "BFSiteBundle:Challenge:challengeLastsvideo.html.twig" with {"listVideos": listVideos} only %}
	      			</div>
	      		</div><!--
	      	--><div class="col-xs-12 col-sm-12 col-md-5 col-lg-7">
	      			<div class="row">
	      				{% include "BFSiteBundle:Challenge:challengeRanking.html.twig" with {"rankUsers": rankUsers} only %}
	      			</div>
	      		</div>
        		<!-- end of the challenge view page -->
        	</div>
        </div>
    </div>
</section>
{% endblock %}
