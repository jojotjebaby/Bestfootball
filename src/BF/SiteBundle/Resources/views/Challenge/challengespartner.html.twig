{% extends "BFSiteBundle::base.html.twig" %}

{% block title %}
  Challenges - {{ parent() }}
{% endblock %}


{% block content %}
<section class="homepage">
	<div class="row" style="margin-top:50px;">
     	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
        	<div class="row">
        		<!-- Begin of the challenges page -->
        		{% for challenge in listChallenges %}
					{% include "BFSiteBundle:Challenge:Challengethumb.html.twig" with {"challenge": challenge} only %}
				{% endfor %}
        		<!-- End of the challenges page -->
        		<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3" style="padding:10px;">
					<div class="challenge">
						<div class="row">
							</br>
							<h3 class="text-center">Sponsor a challenge?</h3>
							<p class="text-center">You want to be the sponsor of one challenge? Contact us for more info and propose us a new challenge.</p>
							<button onclick="location.href='{{ path('bf_site_contact') }}'" class="btn btn-participate" type="submit">Contact us!</button>
						</div>
					</div>
				</div>
        	</div>
        </div>
    </div>
</section>
{% endblock %}
