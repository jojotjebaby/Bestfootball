          <a class="navbar-brand" href="{{ path('bf_site_homepage') }}">Best Football</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class=""><a href="{{ path('bf_site_challenges') }}">Challenges</a></li>
            <li class=""><a href="{{ path('bf_site_partnerChallenges') }}">Partner Challenges</a></li>
